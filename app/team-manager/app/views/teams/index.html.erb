<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Team name</th>
      <th>Age group</th>
      <th>Wins</th>
      <th>Loses</th>
      <th>Ties</th>
      <th>Team start</th>
      <th>Team end</th>
      <th>Is archived</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.team_name %></td>
        <td><%= team.age_group %></td>
        <td><%= team.wins %></td>
        <td><%= team.loses %></td>
        <td><%= team.ties %></td>
        <td><%= team.team_start %></td>
        <td><%= team.team_end %></td>
        <td><%= team.is_archived %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

