<p id="notice"><%= notice %></p>

<h1>Player Stats</h1>

<table>
  <thead>
    <tr>
      <th>Jersey number</th>
      <th>Player bio</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Person</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @player_stats.each do |player_stat| %>
      <tr>
        <td><%= player_stat.jersey_number %></td>
        <td><%= player_stat.player_bio %></td>
        <td><%= player_stat.height %></td>
        <td><%= player_stat.weight %></td>
        <td><%= player_stat.person %></td>
        <td><%= player_stat.team %></td>
        <td><%= link_to 'Show', player_stat %></td>
        <td><%= link_to 'Edit', edit_player_stat_path(player_stat) %></td>
        <td><%= link_to 'Destroy', player_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

